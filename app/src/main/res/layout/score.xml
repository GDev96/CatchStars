<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablescore"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@drawable/table_layout">

    <TextView
        android:id="@+id/title"
        android:layout_height="30dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="3dip"
        android:text="@string/score"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textColor="#D7FCEF80"
        />

    <TableLayout
        android:id="@+id/scoreTable"
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/aclonica"
        android:padding="15dp"
        android:textColor="#D7FCEF80"
        android:stretchColumns="*"
        >

        <TableRow
            android:id="@+id/row"
            android:layout_width="300dp"
            android:layout_height="30dp"
            >

            <TextView
                android:id="@+id/data"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:fontFamily="@font/aclonica"
                android:padding="3dp"
                android:gravity="center"
                android:background="@drawable/textfield_table"
                />

            <TextView
                android:id="@+id/points"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:fontFamily="@font/aclonica"
                android:padding="3dp"
                android:gravity="center"
                android:background="@drawable/textfield_table"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:fontFamily="@font/aclonica"
                android:padding="3dp"
                android:gravity="center"
                android:background="@drawable/textfield_table"
                />

        </TableRow>

    </TableLayout>


    <Button
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonscore_layout"
        android:scaleType="@null"
        android:text="@string/home"
        android:textColor="#FDAD6F"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>