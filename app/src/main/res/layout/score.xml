<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablescore"
    android:layout_width="300dp"
    android:layout_height="500dp"
    android:background="@drawable/table_layout">

    <TextView
        android:id="@+id/title"
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="3dip"
        android:text="@string/score"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/red"
        />

    <TableRow
        android:id="@+id/row"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/data"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/textfield_table"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/data"
            android:textColor="@color/light_orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/points"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/textfield_table"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/punti"
            android:textColor="@color/light_orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/textfield_table"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/tempo"
            android:textColor="@color/light_orange"
            android:textSize="16sp" />

    </TableRow>

    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <TableLayout
            android:id="@+id/scoreTable"
            android:layout_width="280dp"
            android:layout_height="300dp"
            android:fontFamily="@font/aclonica"
            android:padding="15dp"
            android:stretchColumns="*"
            android:textColor="@color/red">


        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/back_button"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonscore_layout"
        android:scaleType="@null"
        android:text="@string/home"
        android:textColor="@color/light_orange"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>