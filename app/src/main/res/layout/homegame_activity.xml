<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:background="@drawable/StarrySky2"
    tools:context=".HomeGameActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/StarrySky2" />

    <!--la stazione spaziale ti dÃ  il benvenuto!-->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/welcome"
        android:fontFamily="@font/aclonica"
        android:textColor="@color/dark_yellow"
        android:textSize="26dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--Play-->
    <ImageButton
        android:id="@+id/playgame"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:contentDescription="@string/button_play"
        android:scaleType="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        app:srcCompat="@drawable/play1" />

    <!--Setting-->
    <ImageButton
        android:id="@+id/setting"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:contentDescription="@string/button_setting"
        android:scaleType="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.650"
        app:srcCompat="@drawable/setting3"/>

    <!--Score-->
    <ImageButton
        android:id="@+id/score"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:contentDescription="@string/button_score"
        android:scaleType="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/score3"
        />

    <!--exit-->
    <ImageButton
        android:id="@+id/exit"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:contentDescription="@string/button_exit"
        android:scaleType="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.80"
        app:srcCompat="@drawable/exit3"/>


</androidx.constraintlayout.widget.ConstraintLayout>